<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.profile.ProfileFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="Bonjour, Jean, voici votre tableau de réservation"
            android:padding="16dp" />
        <!-- En-tête du tableau -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@color/primary"
            android:padding="8dp">



            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Circuit"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombres Jours"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Début"
                android:padding="20dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Paiement"
                android:textColor="#FFFFFF" />
        </TableRow>

        <!-- Ligne du tableau pour les réservations (exemple) -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">



            <TextView
                android:id="@+id/circuitTableau"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/joursTableau"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/débutTableau"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/circuitPaiement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                />
        </TableRow>

        <Button
            android:id="@+id/btnSupprimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Supprimer reservation"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:padding="8dp"
            android:layout_margin="16dp" />
        <Button
            android:id="@+id/btnDeconnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Se déconnecter"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:padding="8dp"
            android:layout_margin="16dp" />

    </TableLayout>

</ScrollView>