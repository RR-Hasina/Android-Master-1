<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profileContainer"
    tools:context=".view.fragment.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/le_circuit_propos_par_l_quipe_cette_annee"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp"
            />

        <TextView
            android:id="@+id/circuitTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/circuitInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/circuitImage1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_home_black_24dp"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/circuitImage2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_home_black_24dp"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/circuitImage3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_home_black_24dp"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/circuitItineraire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/itineraire_antananarivo_tulear"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp"
            />

        <!-- Tableau pour l'itinéraire -->
        <TableLayout
            android:id="@+id/talbeauLayoutTrajet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_gravity="center_horizontal"
            >

            <!-- En-tête du tableau -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/d_part"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="8dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/arriv_e"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="8dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dur_e"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="8dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/distance"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="8dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/transport"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="8dp"
                    />

            </TableRow>

            <!-- Lignes de données de l'itinéraire -->


        </TableLayout>


        <!-- Tableau pour les informations de disponibilité -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_gravity="center_horizontal"
            >

            <!-- En-tête du tableau -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/date_de_d_but"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="8dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/date_de_fin"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="8dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/disponible"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="8dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/prix_fmg"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="8dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Statut"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="8dp"
                    />
            </TableRow>

            <!-- Ligne de données de disponibilité -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/circuitDebut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    />

                <TextView
                    android:id="@+id/circuitFin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    />

                <TextView
                    android:id="@+id/circuitDisponible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    />

                <TextView
                    android:id="@+id/circuitPrix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    />

                <TextView
                    android:id="@+id/circuitStatut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnReservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/r_server_une_place"
            android:textStyle="bold"
            android:background="#2196F3"
            android:padding="16dp"
            android:layout_margin="16dp"
            />
    </LinearLayout>
</ScrollView>